@using WebBanQuanAo.Models;
@model IEnumerable<SanPham>

<div class="container">
    <div class="product-top">
        <div class="product-one">
            @foreach (var item in Model.Take(4).OrderBy(n=>n.DonGia))
            {
                <div class="col-md-3 product-left">
                    <div class="product-main simpleCart_shelfItem">
                        <a href="@Url.RouteUrl("XemChiTiet" ,new {@Id = item.IdSanPham, @TenSanPham = item.TenSanPham})" class=" mask">
                            @*<img class="img-responsive zoom-img" src="@Url.Content("~/Content/ckfinder/core/connector/aspx/" + Model.ElementAt(0).HinhAnh)" alt=" " />*@
                            <img class="img-responsive zoom-img" src="@Url.Content("~/Content/ckfinder/core/connector/aspx/" + item.HinhAnh)" alt=" " />

                            @*<img class="img-responsive zoom-img" src="~/Content/CssHome/HinhSanPham/@item.HinhAnh"alt=" " />*@

                        </a>
                        <div class="product-bottom">
                            <h3> @item.TenSanPham</h3>
                            @*<p>@Html.Raw(item.MoTa)</p>*@
                            <h4><a class="item_add" href="@Url.Action("ThemGioHang", "GioHang", new { @IdSanPham = item.IdSanPham, @strUrl= Request.Url.ToString() }) "><i></i></a> <span class=" item_price">@item.DonGia.Value.ToString("#,##")</span></h4>

                        </div>
                        <div class="srch">
                            <span>-20%</span>
                        </div>
                    </div>
                </div>
            }
            <div class="clearfix"></div>
        </div>
    </div>
</div>

