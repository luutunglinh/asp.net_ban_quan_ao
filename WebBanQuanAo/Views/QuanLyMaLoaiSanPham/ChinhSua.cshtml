@model WebBanQuanAo.Models.MaLoaiSanPham

@{
    ViewBag.Title = "sửa danh mục";
    Layout = "~/Views/Layout/AdminQuanTri.cshtml";
}

<h2>Chỉnh sửa</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
     
        <hr />
        @Html.ValidationSummary(true)
        @Html.Hidden("IdMLSP", Model.IdMLSP)



        <div class="form-group">
            @Html.LabelFor(model => model.TenLSP, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenLSP)
                @Html.ValidationMessageFor(model => model.TenLSP)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ThongTin, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ThongTin)
                @Html.ValidationMessageFor(model => model.ThongTin)
            </div>
        </div>

 

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
