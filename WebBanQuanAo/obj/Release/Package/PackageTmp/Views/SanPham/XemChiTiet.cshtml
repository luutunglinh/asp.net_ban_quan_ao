@using WebBanQuanAo.Models;
@model SanPham
@{
    ViewBag.Title = "XemChiTiet";
    Layout = "~/Views/Layout/ProductLayout.cshtml";
}
<div id="fb-root"></div>
<script>
(function (d, s, id) {
    var js, fjs = d.getElementsByTagName(s)[0];
    if (d.getElementById(id)) return;
    js = d.createElement(s); js.id = id;
    js.src = "//connect.facebook.net/vi_VN/sdk.js#xfbml=1&version=v2.6&appId=482221048641721";
    fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));</script>

<div class="col-md-9 product-price1">
    <div class="col-md-5 single-top">
        <div class="flexslider">
            <ul class="slides">
                <li data-thumb="@Url.Content("~/Content/CssHome/HinhSanPham/"+Model.HinhAnh)">
                    <img src="@Url.Content("~/Content/CssHome/HinhSanPham/" + Model.HinhAnh)" />
                </li>
                <li data-thumb="@Url.Content("~/Content/CssHome/HinhSanPham/" + Model.HinhAnh1)">
                    <img src="@Url.Content("~/Content/CssHome/HinhSanPham/" + Model.HinhAnh1)" />
                </li>
                <li data-thumb="@Url.Content("~/Content/CssHome/HinhSanPham/" + Model.HinhAnh2)">
                    <img src="@Url.Content("~/Content/CssHome/HinhSanPham/" + Model.HinhAnh2)" />
                </li>

            </ul>
        </div>
        <!-- FlexSlider -->
        <script defer src="~/Content/CssHome/js/jquery.flexslider.js"></script>
        <link rel="stylesheet" href="~/Content/CssHome/css/flexslider.css" type="text/css" media="screen" />

        <script>
            // Can also be used with $(document).ready()
            $(window).load(function () {
                $('.flexslider').flexslider({
                    animation: "slide",
                    controlNav: "thumbnails"
                });
            });
        </script>
    </div>
    <div class="col-md-7 single-top-in simpleCart_shelfItem">
        <div class="single-para ">
            <h4>@Model.TenSanPham</h4>
            <div class="star-on">
                <ul class="star-footer">
                    <li><a href="#"><i> </i></a></li>
                    <li><a href="#"><i> </i></a></li>
                    <li><a href="#"><i> </i></a></li>
                    <li><a href="#"><i> </i></a></li>
                    <li><a href="#"><i> </i></a></li>
                </ul>
                <div class="review">
                    <a href="#"> Lượt xem: @Model.LuotXem</a>

                </div>
                <div class="clearfix"> </div>
            </div>

            <h5 class="item_price">@Model.DonGia.Value.ToString("#,##") VNĐ</h5>
            <p>
                @Html.Raw(Model.MoTa)
            </p>
            <a href="@Url.Action("ThemGioHang", "GioHang", new { @IdSanPham = Model.IdSanPham, @strUrl = Request.Url.ToString() })" class="add-cart item_add">Giỏ hàng</a>
            <br />
            <br />
        </div>

    </div>
    <div class="cd-tabs is-ended">
        <nav>
            <ul class="cd-tabs-navigation">
                <li><a data-content="fashion" href="#0" class="selected">Mô Tả </a></li>
                <li><a data-content="cinema" href="#0" class="">Bình Luận</a></li>
                <li><a data-content="television" href="#0" class="">Lượt Xem</a></li>

            </ul>
        </nav>
        <ul class="cd-tabs-content" style="height: auto;">
            <li data-content="fashion" class="selected">
                <div class="facts">
                  <p>@Model.MoTa</p>
           
                </div>

            </li>
            <li data-content="cinema" class="">
                <div class="facts1">

                    <div class="fb-comments" data-href="http://localhost:31615/%C3%81o%20Nam-1#0" data-numposts="5"></div>
                </div>

            </li>
            <li data-content="television" class="">
                <div class="comments-top-top">
                    <div class="top-comment-left">
                        Lượt Xem : @Model.LuotXem
                    </div>
                
                    <div class="clearfix"> </div>
      
                </div>

            </li>
            <div class="clearfix"></div>
        </ul>
    </div>
 

<div class="clearfix"> </div>
	</div>	
